{
  "expo": {
    "name": "GuineaPal",
    "slug": "guineapal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "jsEngine": "hermes",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.tasha.guineapal",
      "buildNumber": "1.0.0",
      "supportsTablet": true,
      "jsEngine": "hermes"
    },
    "android": {
      "package": "com.tasha.guineapal",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "plugins": [
      "expo-splash-screen",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow GuineaPal to access your photos to upload pet pictures",
          "cameraPermission": "Allow GuineaPal to use your camera to take pet photos"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow GuineaPal to save photos to your gallery",
          "savePhotosPermission": "Allow GuineaPal to save photos to your gallery",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#5D4037",
          "androidCollapsedTitle": "GuineaPal Alerts"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow GuineaPal to access your microphone."
        }
      ]
    ],
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 30000,
      "checkAutomatically": "ON_LOAD"
    },
    "owner": "tashaingle",
    "extra": {
      "eas": {
        "projectId": "d149b9fe-85ba-43b2-9577-b176594a069a"
      }
    }
  }
}
