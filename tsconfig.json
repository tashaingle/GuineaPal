{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "bundler", 
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@navigation/*": ["src/navigation/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@constants/*": ["src/constants/*"]
    },
    "types": ["jest", "@testing-library/jest-native"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "customConditions": ["react-native"] 
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "App.tsx",
    "babel.config.js",
    "**/*.test.ts",
    "**/*.test.tsx",
    "__mocks__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/e2e/**"
  ]
}